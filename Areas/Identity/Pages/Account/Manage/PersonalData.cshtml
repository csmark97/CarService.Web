@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>Személyes adatok</h4>
<div class="row">
    <div class="col-md-6">
        <p>Az Ön felhasználói fiókja személyes adatokat tartalmaz. Ezen az oldalon lehetősége nyílik ezen adatok megtekintésére illetve törlésére.</p>
        <p>
            <strong>Figyelem! Az adatainak törlésével a felhasználói fiókja véglegesen törlésre kerül. A művelet nem visszavonható.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-secondary" type="submit">Adataim letöltése</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Fiók végleges törlése</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}