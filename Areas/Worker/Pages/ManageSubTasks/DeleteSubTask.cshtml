@page
@model CarService.Web.Areas.Worker.Pages.ManageSubTasks.DeleteSubTaskModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SubTask</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Elnevezés
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTask.Name)
        </dd>
        <dt class="col-sm-2">
            Becsült költség
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTask.EstimatedPrice)
        </dd>
        <dt class="col-sm-2">
            Becsült munkaidő
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTask.EstimtedTime)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="SubTask.Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-page="./BrowseSubTasks">Vissza a teljes listára</a>
    </form>
</div>